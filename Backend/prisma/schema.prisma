// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  username  String?
  password  String
  reviews   Review[]
  createdAt DateTime @default(now())
}

model Review {
  id        Int      @id @default(autoincrement())
  title     String
  content   String
  rating    Int
  images    String[]
  authorId  Int
  author    User     @relation(fields: [authorId], references: [id])
  createdAt DateTime @default(now())
  Item      Item?    @relation(fields: [ItemId], references: [id])
  ItemId    Int?
}

model Item {
  id        Int      @id @default(autoincrement())
  title     String   @unique
  reviews   Review[]
  createdAt DateTime @default(now())
}
